create table readings_json (
    id serial,
    site_id int,
    measurementtimedefault timestamp with time zone,
    coordinate point,
    doc jsonb,
    unique (site_id, measurementtimedefault)
);

create index readings_json_site_id_index on locations(site_id);
create index readings_json_measurementtimedefault_index on locations(measurementtimedefault);
create index readings_json_coordinate_index on locations using gist(coordinate);
