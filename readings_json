create table readings_json (
    id serial,
    site_id int,
    measurementtimedefault timestamp with time zone,
    coordinate point,
    doc jsonb,
    unique (site_id, measurementtimedefault)
);

create index site_id_index on locations(site_id);
create index measurementtimedefault_index on locations(measurementtimedefault);
create index coordinate_index on locations using gist(coordinate);
